---
import "../styles/tailwind.css";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lumina.mia</title>
    <meta property="og:title" content="Photographolio" />
    <meta
      name="description"
      content="I have lived, I have seen."
    />
    <meta
      property="og:description"
      content="I have lived, I have seen."
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/icons/favicon.svg"
    />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/MorganKryze/Portfolio/main/presentation.jpg"
    />
    <!-- TODO: replace blank with real URL -->
    <meta property="og:url" content="" />
  </head>
  <body class="bg-image">
    <Nav currentPage={currentPage} />
    <slot />
    <Footer />
  </body>
</html>
